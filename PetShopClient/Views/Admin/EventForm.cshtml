@model DataObject.Event
<div id="eventModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <form asp-action="AddEvent" method="post" id="eventForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="eventName">Event Name</label>
                <input asp-for="EventTitle" type="text" id="eventName" required>
            </div>
            <div class="form-group">
                <label for="eventDescription">Description</label>
                <input asp-for="Description" type="text" id="eventDescription" required>
            </div>
            <div class="form-group">
                <label for="eventDate">Date</label>
                <input asp-for="PostDate" type="date" id="eventDate" required>
            </div>
            <div class="form-group">
                <label for="eventImage">Image Upload</label>
                <input type="file" name="eventImage" id="eventImage" accept="image/*" required>
                <input type="hidden" asp-for="Image" value="none" />
            </div>
            <button type="submit">Save</button>
            <button id="closeEventModalBtn">Close</button>
        </form>
    </div>
</div>
